<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <include layout="@layout/title_bar_default"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/imageView"
        android:src="@drawable/logo_144"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="引路人"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="V1.111"
        android:textSize="12sp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        />
    <RelativeLayout
        android:id="@+id/rl_checkUpdate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        >
        <TextView
            android:id="@+id/tv_update_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="版本更新"
            android:gravity="left|center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textColor="#000000"
           />

        <TextView
            android:id="@+id/tv_currentVersion"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1.0.0"
            android:gravity="left|center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_update_title"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="已是最新版本"
            android:gravity="right"
            android:textSize="15sp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="联系我们"
            android:gravity="left|center_vertical"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="1344006993@qq.com"
            android:gravity="right"
            android:textSize="15sp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/gotoIntroduction"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="功能介绍"
            android:layout_marginLeft="10dp"
            android:gravity="left|center_vertical"
            android:textSize="15sp"
            android:textColor="#000000"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/g3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Copyright@2019.All Rights Reserverd"
        android:gravity="bottom|center_horizontal"
        android:id="@+id/textView5"
        android:paddingBottom="10dp"
        />

</LinearLayout>