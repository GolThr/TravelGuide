<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="35dp">

        <!-- android:background="@null" 下划线miss-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_username"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/back_rad_gray"
                android:hint="手机号" />

            <TextView
                android:id="@+id/btn_identify"
                android:layout_alignRight="@+id/edit_username"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="50dp"
                android:textColor="@color/colorPrimary"
                android:text="获取验证码" />

        </RelativeLayout>


        <EditText
            android:id="@+id/edit_identify"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/back_rad_gray"
            android:hint="验证码" />

        <EditText
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/back_rad_gray"
            android:hint="新密码" />


        <EditText
            android:id="@+id/edit_repassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/back_rad_gray"
            android:hint="再次输入密码" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/back_button_main"
            android:textColor="@color/white"
            android:text="确认" />

</LinearLayout>
